<header>
  {%- if sections -%}
    <nav>
      <ul>
        <li><a href="/">{{ title }}</a></li>
        {%- for item in sections -%}
          {%- if item.nav -%}
            <li><a href="#{{ item.nav | slug }}">{{ item.nav }}</a></li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </nav>
  {%- endif -%}
</header>
