<main>
  {%- if sections -%}
    {%- assign hlevel1 = 1 -%}
    {%- for item in sections -%}
      {%- assign hlevel2 = 2 -%}
      <section class="{{ item.type }}">
        <div class="inner">
          {% if item.title %}
            <h{{ hlevel1 }}>{{ item.title }}</h{{ hlevel1 }}>
            {%- assign hlevel1 = 2 -%}
          {% endif %}
          {%- assign hlevel2 = hlevel1 -%}
          {% if item.subtitle %}
            <h{{ hlevel2 }}>{{ item.subtitle }}</h{{ hlevel2 }}>
            {%- assign hlevel2 = hlevel2 | plus: 1 -%}
          {% endif %}
          {% if item.gfx %}
            <div class="{{ item.type }}__gfx">
              {% if item.gfx contains '.svg' %}
                {% assign gfxPath = item.gfx %}
                {% include gfxPath %}
              {% else %}
                <img src="{{ item.gfx.src }}" alt="{{ item.gfx.alt }}">
              {% endif %}
            </div>
          {% endif %}
          {%- if item.cta -%}
            <a class="cta" href="{{ item.cta.href }}">{{ item.cta.text }}</a>
          {%- endif -%}
          {%- for subitem in item.list -%}
            {%- assign hlevel3 = hlevel2 -%}
            <div class="{{ item.type }}__item"{% if subitem.bg %} style="background-image: url('/{{ subitem.bg }}');"{% endif %}>
              {% if subitem.title %}
                <h{{ hlevel3 }}>{{ subitem.title }}</h{{ hlevel3 }}>
                {%- assign hlevel3 = hlevel3 | plus: 1 -%}
              {% endif %}
              {%- assign hlevel4 = hlevel3 -%}
              {% if subitem.subtitle %}
                <h{{ hlevel4 }}>{{ subitem.subtitle }}</h{{ hlevel4 }}>
              {% endif %}
              {% if subitem.gfx %}
                <div class="{{ item.type }}__gfx2">
                  {% if subitem.gfx contains '.svg' %}
                    {% assign gfxPath = subitem.gfx %}
                    {% include gfxPath %}
                  {% else %}
                    <img src="{{ subitem.gfx.src }}" alt="{{ subitem.gfx.alt }}">
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {%- endfor -%}
        </div>
      </section>
    {%- endfor -%}
  {%- endif -%}
</main>
